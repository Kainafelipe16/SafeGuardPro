<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDetalhesEpiEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="DETALHES EPI"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edtNomeEpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetalhesEpiEpi"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="60dp"
        android:hint="Nome: "
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edtDescricaoEpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNomeEpi"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="60dp"
        android:hint="Descrição: "
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edtCA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtDescricaoEpi"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="60dp"
        android:hint="Certificado: "
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edValidadeFabricacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtCA"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="60dp"
        android:hint="Validade por Fabric. : "
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edValidadeTempoUso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edValidadeFabricacao"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="60dp"
        android:hint="Validade por Fabric. : "
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColorHint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>