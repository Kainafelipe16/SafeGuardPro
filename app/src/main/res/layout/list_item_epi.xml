<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgEpi"
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/capacete" />

    <TextView
        android:id="@+id/tvNomeEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginStart="25dp"
        android:inputType="text"
        android:text="Nome"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        app:layout_constraintStart_toEndOf="@+id/imgEpi"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvCaEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:inputType="number"
        android:text="CA"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgEpi"
        app:layout_constraintTop_toBottomOf="@id/tvNomeEpi"/>

    <TextView
        android:id="@+id/tvValidadeFabricacaoEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:inputType="number"
        android:text="Validade Fabric."
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgEpi"
        app:layout_constraintTop_toBottomOf="@id/tvCaEpi"/>

    <TextView
        android:id="@+id/tvValidadeTempoUsoEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:inputType="number"
        android:text="Validade Fabric."
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgEpi"
        app:layout_constraintTop_toBottomOf="@id/tvValidadeFabricacaoEpi"/>
</androidx.constraintlayout.widget.ConstraintLayout>