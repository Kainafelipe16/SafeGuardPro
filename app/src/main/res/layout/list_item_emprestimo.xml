<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgEmprestimo"
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/epi" />

    <TextView
        android:id="@+id/tvIdEmprestimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgEmprestimo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="05dp"
        android:textSize="20sp"
        android:ems="10"
        android:inputType="text"
        android:text="Id do Empréstimo: "
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tvDataEmprestimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgEmprestimo"
        app:layout_constraintTop_toBottomOf="@id/tvIdEmprestimo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:ems="10"
        android:inputType="text"
        android:text="Data do Empréstimo: "
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tvIdFuncionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgEmprestimo"
        app:layout_constraintTop_toBottomOf="@id/tvDataEmprestimo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:ems="10"
        android:inputType="text"
        android:text="Id do Funcionário: "
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tvIdEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgEmprestimo"
        app:layout_constraintTop_toBottomOf="@id/tvIdFuncionario"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:ems="10"
        android:inputType="text"
        android:text="Id da Epi: "
        android:textStyle="bold"
        android:textColor="#fff" />

</androidx.constraintlayout.widget.ConstraintLayout>